{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "resources/public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "resources/public/dev-index.html",
      "resources/public/prod-index.html",
      "resources/public/firebase-init.js",
      "resources/public/example-firebase-init.js"
    ]
  }
}
